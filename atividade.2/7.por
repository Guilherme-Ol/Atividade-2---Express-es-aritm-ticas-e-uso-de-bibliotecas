programa
{
	
	funcao inicio()
	{
		inteiro idade, soma

		escreva("Informe a idade da criança: ")
		leia(idade)

		soma = idade * (idade + 1) / 2

		escreva("A soma de todas as idades que você já teve é: ", soma, ".")
	}
}
